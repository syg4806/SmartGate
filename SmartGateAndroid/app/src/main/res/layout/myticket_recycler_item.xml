<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="300dp"
  android:layout_height="match_parent"
  android:layout_margin="20dp"
  android:background="@drawable/ic_tikect_frame">

  <ImageView
    android:id="@+id/myTicketItemImageView"
    android:layout_width="220dp"
    android:layout_height="180dp"
    android:background="@drawable/button_empty_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/myTicketItemPlaceTextView"/>
  <TextView
    android:id="@+id/myTicketItemPlaceTextView"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="장소 :"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myTicketItemImageView"
    app:layout_constraintBottom_toTopOf="@+id/myTicketItemKindsTextView"/>

  <TextView
    android:id="@+id/myTicketItemKindsTextView"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="티켓 종류 :"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myTicketItemPlaceTextView"
    app:layout_constraintBottom_toTopOf="@+id/myTicketItemDateTextView"/>


  <TextView
    android:id="@+id/myTicketItemDateTextView"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="날짜 :"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myTicketItemKindsTextView"
    app:layout_constraintBottom_toTopOf="@+id/myTicketActivityItemGiftButton"/>

  <Button
    android:id="@+id/myTicketActivityItemUseButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="티켓 사용사기"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/myTicketActivityItemGiftButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myTicketItemDateTextView" />

  <Button
    android:id="@+id/myTicketActivityItemGiftButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/ticket_gift_select_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myTicketItemDateTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.beacon.TicketUsingActivity">

  <ImageView
    android:id="@+id/usingTicketBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/usingTicketLayout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    android:background="@drawable/ic_using_ticket_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="6:11"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

  <TextView
    android:id="@+id/logTxt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
    android:id="@+id/usingTicketCountTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_count_bg"
    app:layout_constraintBottom_toTopOf="@+id/usingTicketNoticeImg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/usingTicketLayout" />

  <ImageView
    android:id="@+id/usingTicketNoticeImg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:src="@drawable/ic_using_notice"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/usingTicketCountTV" />
</androidx.constraintlayout.widget.ConstraintLayout>
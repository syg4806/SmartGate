<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.main.MainActivity">

  <ImageView
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="@color/indiePink"
    android:onClick="onClick"
    android:src="@drawable/ic_main_logo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/toBooking"/>

  <ImageView
    android:id="@+id/toBooking"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/violet"
    android:onClick="onClick"
    android:src="@drawable/ic_main_booking"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintBottom_toTopOf="@+id/toMyTicket"/>

  <ImageView
    android:id="@+id/toMyTicket"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/orange"
    android:onClick="onClick"
    android:src="@drawable/ic_main_my_ticket"
    app:layout_constraintTop_toBottomOf="@id/toBooking"
    app:layout_constraintBottom_toTopOf="@+id/toMyPage"/>

  <ImageView
    android:id="@+id/toMyPage"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/pink"
    android:onClick="onClick"
    android:src="@drawable/ic_main_my_page"
    app:layout_constraintTop_toBottomOf="@id/toMyTicket"
    app:layout_constraintBottom_toBottomOf="parent"
    android:contentDescription="asdasd" />

</androidx.constraintlayout.widget.ConstraintLayout>